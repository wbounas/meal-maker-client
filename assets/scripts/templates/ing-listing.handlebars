<table class="table table-striped" id="fridge-table">
  <thead>
    <tr>
      <th>Ingredient ID</th>
      <th>Ingredient Name</th>
      <th>Unit</th>
      <th>Quantity</th>
      <th>Notes</th>
      <th>Update</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    {{#each ingredients as |ingredient|}}
    <tr>
      <td data-id="{{ingredient.id}}">{{ingredient.id}}</td>
      <td class="name" data-name="{{ingredient.name}}"> {{ingredient.name}} </td>
      <td class="unit" data-unit="{{ingredient.unit}}"> {{ingredient.unit}} </td>
      <td class="quantity" data-quantity="{{ingredient.quantity}}"> {{ingredient.quantity}} </td>
      <td class="notes" data-notes="{{ingredient.notes}}"> {{#if ingredient.notes}}
        {{ingredient.notes}}
      {{else}}
        No notes provided.
      {{/if}}
      </td>
      <td><button type="button" class="btn btn-warning update-btn"
        data-id="{{ingredient.id}}"
        data-name="{{ingredient.name}}"
        data-unit="{{ingredient.unit}}"
        data-quantity="{{ingredient.quantity}}"
        data-notes="{{ingredient.notes}}">
        Update/Change
      </button></td>
      <td><button class="btn btn-danger remove-ing">Remove</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
