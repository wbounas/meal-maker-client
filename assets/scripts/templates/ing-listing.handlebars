{{#each ingredients as |ingredient|}}

  <!-- {{> partial}} -->
  <!-- NOTE: 'partial' can be named anything, as long as the filename is named the same! -->
  <!-- Don't uncomment yet -->

 <!-- Developers, why are we using data-id and not just id? -->
<ul data-id="{{ingredient.id}}">
  <li>
    <p> <small>Ingredient: {{ingredient.name}}</small> </p>
    <p> <small>Unit: {{ingredient.unit}}</small> </p>
    <p> <small>Quantity: {{ingredient.quantity}}</small> </p>
    <p> {{#if ingredient.notes}}
      {{ingredient.notes}}
    {{else}}
      No notes provided.
    {{/if}}
    </p>
    <button class="remove-ing" id="remove-ing">Remove</button>
  </li>
</ul>

{{/each}}
